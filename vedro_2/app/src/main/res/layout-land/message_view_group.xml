<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar"
        android:layout_width="@dimen/margin_40sp"
        android:layout_height="@dimen/margin_40sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_2dp"
        android:layout_marginEnd="@dimen/margin_9dp"
        app:cardCornerRadius="@dimen/margin_50dp">

        <ImageView
            android:layout_width="@dimen/margin_40sp"
            android:layout_height="@dimen/margin_40sp"
            android:src="@drawable/avatar" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/message_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_reaction_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_16sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:maxWidth="@dimen/margin_400dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_16sp" />

    </LinearLayout>

    <com.example.homework_2.presentation.custom.FlexBoxLayout
        android:id="@+id/flex_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexMaxWidth="@dimen/margin_450dp" />

</merge>