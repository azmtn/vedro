<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_own_message_block"
        android:maxWidth="@dimen/margin_400dp"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingStart="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_8dp"
        android:paddingBottom="@dimen/margin_8dp"
        android:textColor="@color/grey_100"
        android:textSize="@dimen/margin_16sp"
        tools:ignore="RtlSymmetry" />

    <com.example.homework_2.presentation.custom.FlexBoxLayout
        android:id="@+id/flex_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:flexMaxWidth="@dimen/margin_450dp" />
</merge>