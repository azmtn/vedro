<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_own_message_block"
        android:maxWidth="@dimen/margin_200dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/grey_100"
        android:textSize="@dimen/margin_16sp" />

    <com.example.homework_2.presentation.custom.FlexBoxLayout
        android:id="@+id/flex_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:flexMaxWidth="@dimen/margin_250dp" />
</merge>